<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <title>Document</title>
</head>
<body>
        <h1 class="jumbotron text-center bg-primary">EDIT @ViewBag.dish[0].name</h1>
    <a href="/">HOME</a>
    <p>Name: @ViewBag.dish[0].name</p>
    <p>chef: @ViewBag.dish[0].chef</p>
    <p>tastiness: @ViewBag.dish[0].tastiness</p>
    <p>calories: @ViewBag.dish[0].calories</p>
    <p>description: @ViewBag.dish[0].description</p>

    @model Dishes
    <form asp-action="UpdateDish" asp-controller="Home" method="post">
        <p>chefs name:</p>
        <span asp-validation-for="chef"></span>
    <label asp-for="chef">chef</label>
    <input asp-for="chef"><br>
    <label asp-for="tastiness">Tastiness</label>
    <span asp-validation-for="tastiness"></span>
    <select asp-for='tastiness'>
            <option value='1'>1</option>
            <option value='2'>2</option>
            <option value='3'>3</option>
            <option value='4'>4</option>
            <option value='5'>5</option>
        </select><br>
        <span asp-validation-for="name"></span>
        <label asp-for="name">name of dish</label>
        <input asp-for="name"><br>
    <span asp-validation-for="description"></span>
    <label asp-for="description">description</label>
    <input asp-for="description"><br>
    <span asp-validation-for="calories"></span>
    <label asp-for="calories">calories</label>
    <input asp-for="calories"><br>
    <input value="update Dish" type="submit">
    </form>
</body>
</html>